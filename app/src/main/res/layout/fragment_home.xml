<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <!-- Top Navigation -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_10dp"
        android:layout_marginTop="@dimen/_20dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnProfile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/profile" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnDiamond"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnSetting"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/diamond" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnSetting"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop"
            android:src="@drawable/setting" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Middle Navigation -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/middle_nav"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.6"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Left Menu -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/left_menu"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="14dp"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnRemove"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="24dp"
                android:scaleType="fitCenter"
                android:src="@drawable/remove" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnDaily"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="24dp"
                android:scaleType="centerCrop"
                android:src="@drawable/daily" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnTask"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="24dp"
                android:scaleType="centerCrop"
                android:src="@drawable/task" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnGallery"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gallery" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- Center Preview Card -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/previewCard"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar"
            app:strokeColor="@android:color/white"
            app:strokeWidth="10dp"
            app:shapeAppearanceOverlay="@style/Base.CardView"/>



        <!-- Right Menu -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/right_menu"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnReward"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="24dp"
                android:scaleType="centerCrop"
                android:src="@drawable/reward" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnRank"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="24dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ranking" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnCosplay"
                android:layout_width="80dp"
                android:layout_height="100dp"

                android:scaleType="centerCrop"
                android:src="@drawable/cosplay" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- Bottom Navigation -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/middle_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnAvatar"
            android:layout_width="@dimen/_200dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:src="@drawable/imv_avatar"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@null" />
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnPkBattle"
            android:layout_width="@dimen/_200dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:src="@drawable/imv_pk"
            app:layout_constraintStart_toEndOf="@id/btnAvatar"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@null" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
